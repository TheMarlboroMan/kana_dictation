#Definiciones de targets.

all: \
$(DIR_O)dummy \
$(EJECUTABLE) \

$(DIR_O)dummy:
	$(PREPARAR_DIR_OBJECTS)

$(EJECUTABLE): \
$(DEP_CLASES_APP) \
$(DEP_FRAMEWORK_BASE) \
$(DEP_FRAMEWORK_DERIVADA) \
$(DEP_CONTROLADORES) \
$(DEP_HERRAMIENTAS_PROYECTO) \
$(DIR_O)bootstrap_aplicacion.o \
main.cpp
	$(CC) $(CFLAGS_TARGET_FINAL) $(INCLUDES) main.cpp $(DIR_O)bootstrap_aplicacion.o $(DEP_FRAMEWORK_BASE) $(DEP_FRAMEWORK_DERIVADA) $(DEP_CLASES_APP) $(DEP_CONTROLADORES) $(DEP_HERRAMIENTAS_PROYECTO) -o $(EJECUTABLE) $(LIBRERIAS) $(LINKER)

clean:
	$(LIMPIAR)

include _makefile_controladores
include _makefile_clases_app
include _makefile_framework

